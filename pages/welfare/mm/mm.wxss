.content{
  display: flex;
  flex-wrap: wrap;
  margin-top: 5rpx;
}
.list{
  width: 48%;
  justify-content: center;
  display: flex;
  margin-bottom: 10rpx;
  box-shadow:1rpx 1rpx 5rpx gainsboro;
  padding-bottom: 6rpx;
  margin-left: 1%;
  margin-right: 1%;
}

.mm-item{
  width: 100%;
  justify-content: center;
  
}
.mm-item image{
  width: 98%;
  display: flex;
  margin: 0 auto;
}

.mm-item text{
  color: #333;
  display: block;
  margin: 0 auto;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  width: 98%;
  text-align: center;
}