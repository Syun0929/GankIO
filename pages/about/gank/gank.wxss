/* pages/about/gank/gank.wxss */
page{
  background-image: url('https://gank.io/static/images/bg.png')
}

.title{
  display: block;
  text-align: center;
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 24px;
}

.desc{
  display: block;
  text-align: center;
  width: 100%;
  height: 100rpx;
  font-size: 13px;
}

.link-list{
  margin-top: 10px;
  margin-bottom: 10px;
}

.iwork-container{
  display: flex;
  justify-content: center;
  margin-bottom: 15px;
}

.img-work{
  width: 150px;
  height: 42px;
  margin: 0 auto;
}

.link-list button{
  background: transparent;
  color: #333;
  margin: 0 auto;
  height: 60rpx;
  line-height: 58rpx;
  border-width: 1px;
  box-shadow: none;
  border-style: solid;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  width: 75%;
  border-color: #00bcdc;
  text-align: center;
}

