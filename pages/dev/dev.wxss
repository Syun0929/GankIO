/*隐藏ScrollerView的滚动条*/
::-webkit-scrollbar
{
width: 0;
height: 0;
color: transparent;
}


.body{
  display: flex;
  flex-direction: column;
}

.menu-scroller{
  width: 100%;
  height: 70rpx;
  float: top;
  background: white;
  white-space: nowrap;
  box-shadow:0rpx 0rpx 5rpx gainsboro;
  position: fixed;
  top: 0;
  z-index: 1000;
}

.menu-scroller view{
  height: 70rpx;
  width: 180rpx;
  display: inline-block;
}

.menu-scroller view text{
  line-height: 65rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  display: block;
  text-align: center;
  color: rgb(138, 133, 133);
}

.menu-scroller view text.active{
  border-bottom-width: 6rpx;
  color: #333;
  border-bottom-color: #00bcdc;
  border-bottom-style: solid;
}

.content{
  display: block;
  height: 100vh;
  margin-top: 70rpx;
}

.item-date{
  color: #00bcdc;
  font-size: 20px;
  display: block;
  margin-left: 20rpx;
  margin-bottom: 15rpx;
  margin-top: 10rpx;
  width: 270rpx;
  overflow:hidden; text-overflow:ellipsis; white-space:nowrap;
  
}

.item-info{
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
  margin-right: 15rpx;
  box-shadow:0rpx 0rpx 6rpx gainsboro;
  padding-left: 15rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  margin-bottom: 35rpx;
}

.desc{
  font-size: 18px;
  display: inline-block;
  width: 100%;
}

.who{
  font-size: 10px;
  color: #00bcdc;
  display: inline-block;
  margin-bottom: 5rpx;
}